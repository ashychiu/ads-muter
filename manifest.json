{
    "manifest_version": 3,
    "name": "YouTube Ad Muter",
    "version": "1.0",
    "description": "Automatically mutes ads on YouTube",
    "permissions": ["tabs"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    }
  }
  